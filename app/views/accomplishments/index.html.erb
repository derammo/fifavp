<h1>Listing accomplishments</h1>

<table>
  <tr>
    <th>Section</th>
    <th>Line Number</th>
    <th>Description</th>
    <th>Skill</th>
    <th>Amount</th>
    <th>Other</th>
    <th class='internal'></th>
    <th class='internal'></th>
    <th class='internal'></th>
  </tr>

<% @accomplishments.each do |accomplishment| %>
  <tr>
    <td><%=h accomplishment.section %></td>
    <td><%=h accomplishment.linenumber %></td>
    <td><%=h accomplishment.description %></td>
    <td><%if accomplishment.skill%>
			<%=h accomplishment.skill.name %>
		<%else%>
			<%=h accomplishment.skill_id %>
		<%end%></td>
    <td><%=h accomplishment.skillamount %></td>
    <td><%=h accomplishment.otherreward %></td>
    <td class='internal'><%=link_to 'Show', accomplishment %></td>
    <td class='internal'><%=link_to 'Edit', edit_accomplishment_path(accomplishment) %></td>
    <td class='internal'><%=link_to 'Destroy', accomplishment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Accomplishment', new_accomplishment_path %>
