<h1>Listing assignments</h1>

<table>
  <tr>
    <th>Role</th>
    <th>Position</th>
    <th>Suitability</th>
    <th>Description</th>
    <th class='internal'></th>
    <th class='internal'></th>
    <th class='internal'></th>
  </tr>

<% @assignments.each do |assignment| %>
  <tr>
    <td><%=h assignment.role.name %></td>
    <td><%=h assignment.position.name %></td>
    <td class='numeric'><%=h assignment.suitability %></td>
    <td><%=h assignment.description %></td>
    <td class='internal'><%=link_to 'Show', assignment %></td>
    <td class='internal'><%=link_to 'Edit', edit_assignment_path(assignment) %></td>
    <td class='internal'><%=link_to 'Destroy', assignment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_assignment_path %>
