<h1>Listing games</h1>

<table>
  <tr>
    <th>League</th>
    <th>Player1</th>
    <th>Player2</th>
    <th>Result</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.league_id %></td>
    <td><%= game.player1_id %></td>
    <td><%= game.player2_id %></td>
    <td><%= game.result_id %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

