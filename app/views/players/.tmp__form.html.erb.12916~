<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <p>
  <b>Accomplishments:</b>
  <table class='internal'>
    <%for accomplishmentstate in @accomplishmentsedit%>
      <tr class='internal'>
        <td class='internal'><%=check_box_tag "accomplishment_" + 
		accomplishmentstate.accomplishment_id.to_s, 
		"true",
          	accomplishmentstate.achieved%></td>
        <td class='internal'><%=h accomplishmentstate.accomplishment.section%></td>
        <td class='internal numeric'><%=h accomplishmentstate.accomplishment.linenumber%>:</td>
        <td class='internal'><%=h accomplishmentstate.accomplishment.description%></td>
      </tr>
    <%end%>
  </table>
  <p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
