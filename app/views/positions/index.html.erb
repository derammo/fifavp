<h1>Listing positions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th class='internal'></th>
    <th class='internal'></th>
    <th class='internal'></th>
  </tr>

<% @positions.each do |position| %>
  <tr>
    <td><%=h position.name %></td>
    <td><%=h position.description %></td>
    <td class='internal'><%=link_to 'Show', position %></td>
	<%if current_user.admin?%>
	    <td class='internal'><%=link_to 'Edit', edit_position_path(position) %></td>
	    <td class='internal'><%=link_to 'Destroy', position, :confirm => 'Are you sure?', :method => :delete %></td>
	<%end%>
  </tr>
<% end %>
</table>

<br />

<%if current_user && current_user.admin? %>
<%= link_to 'New Position', new_position_path %>
<%end%>
