<h1>Listing skills</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Source</th>
    <th class='internal'></th>
    <th class='internal'></th>
    <th class='internal'></th>
  </tr>

<% @skills.each do |skill| %>
  <tr>
    <td><%=h skill.name %></td>
    <td><%=h skill.description %></td>
    <td><%if skill.source%>
	    <%=h skill.source.name %>
		<%else%>
		<%=h skill.source_id %>
		<%end%>
	</td>
    <td class='internal'><%=link_to 'Show', skill %></td>
    <td class='internal'><%=link_to 'Edit', edit_skill_path(skill) %></td>
    <td class='internal'><%=link_to 'Destroy', skill, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Skill', new_skill_path %>
