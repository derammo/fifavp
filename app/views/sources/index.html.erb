<h1>Listing sources</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th class='internal'></th>
    <th class='internal'></th>
    <th class='internal'></th>
  </tr>

<% @sources.each do |source| %>
  <tr>
    <td><%=h source.name %></td>
    <td><%=h source.description %></td>
    <td class='internal'><%=link_to 'Show', source %></td>
    <td class='internal'><%=link_to 'Edit', edit_source_path(source) %></td>
    <td class='internal'><%=link_to 'Destroy', source, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

